<%= content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_question), new_admin_product_question_url, { icon: 'icon-plus', id: 'admin_new_question' } %>
  </li>
<% end %>

<%= render partial: 'spree/admin/shared/product_sub_menu' %>
<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: t('qna_link') } %>

<%= paginate @collection %>

<% if @collection.any? %>
  <table class="index" id="listing_questions">
    <colgroup>
       <col style="width: 35%;">
       <col style="width: 35%;">
       <col style="width: 20%;">
       <col style="width: 10%;">
    </colgroup>
    <thead>
      <tr data-hook="admin_product_questions_index_headers">
        <th><%= Spree::Question.model_name.human %></th>
        <th><%= Spree::Answer.model_name.human %></th>
        <th><%= t('question.asked_by') %></th>
        <th><%= t('question.is_visible') %></th>
        <th data-hook="admin_product_questions_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @collection.each do |question| %>
        <tr id="<%= spree_dom_id question %>" data-hook="admin_product_questions_index_rows" class="<%= cycle('odd', 'even') %>">
          <td><%= question.try(:content) %></td>
          <td><%= question.answer.try(:content) %></td>
          <td class="align-center"><%= link_to question.user.email, [:admin, question.user] if question.user.present? %></td>
          <td class="align-center"><%= question.is_visible %></td>
          <td class="actions" data-hook="admin_product_questions_index_row_actions">
            <%= link_to_edit question, no_text: true, class: 'edit' %>
            &nbsp;
            <%= link_to_delete question, no_text: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alpha twelve columns no-objects-found">
    <%= Spree.t(:no_resource_found, resource: Spree::Question.model_name.human) %>,
    <%= link_to Spree.t(:add_one), new_admin_product_question_url %>!
  </div>
<% end %>

<%= paginate @collection %>
